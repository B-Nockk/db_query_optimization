# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
# All fields are REQUIRED unless marked optional
# No defaults - fail fast if missing

# Application info
APP_TITLE="My FastAPI Application"
APP_VERSION="1.0.0"

# Environment (development, staging, production)
ENVIRONMENT="development"

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Connection (REQUIRED)
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="myapp_dev"

# Pool settings (REQUIRED - no defaults!)
DB_POOL_SIZE="10"
DB_MAX_OVERFLOW="20"
DB_POOL_TIMEOUT="30"
DB_POOL_RECYCLE="3600"

# Driver (REQUIRED: asyncpg, psycopg, or aiosqlite)
DB_DRIVER="asyncpg"

# Authentication
# OPTIONAL in development
# REQUIRED in production
DB_USER="postgres"
DB_PASSWORD="postgres"

# SSL/TLS Configuration
# OPTIONAL in development
# REQUIRED in production (at minimum DB_SSL_MODE)
# DB_SSL_MODE="disable"  # disable, allow, prefer, require, verify-ca, verify-full
# DB_SSL_CERT="/path/to/client-cert.pem"
# DB_SSL_KEY="/path/to/client-key.pem"
# DB_SSL_CA="/path/to/ca-cert.pem"

# ==========================================
# EXAMPLE: PRODUCTION CONFIGURATION
# ==========================================
# Uncomment and modify for production:

# ENVIRONMENT="production"
# LOG_LEVEL="WARNING"

# DB_HOST="prod-db.example.com"
# DB_USER="app_user"
# DB_PASSWORD="<strong_password_from_secrets_manager>"
# DB_SSL_MODE="verify-full"
# DB_SSL_CA="/etc/ssl/certs/rds-ca-bundle.pem"

# ==========================================
# EXAMPLE: STAGING CONFIGURATION
# ==========================================

# ENVIRONMENT="staging"
# LOG_LEVEL="INFO"

# DB_HOST="staging-db.example.com"
# DB_USER="staging_user"
# DB_PASSWORD="<staging_password>"
# DB_SSL_MODE="require"