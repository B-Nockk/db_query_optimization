# public/.env.dev
APP_TITLE="DB Query Optimization"
APP_VERSION="0.1.0"
ENVIRONMENT="development"
LOG_LEVEL="DEBUG"
LOG_BACKENDS="file"
METRIC_ENABLED="true"
METRIC_BACKEND="prometheus"

# Optional database config
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="myapp"
DB_POOL_SIZE="10"

# CONNECTIVITY
PORT="8000"

# API settings
APP_PORT="8000"
UVICORN_EXTRA_FLAGS="--reload"

# Docker Compose settings
COMPOSE_PROJECT_NAME="dbo"
IMAGE_TAG="dev"
ENVIRONMENT="development"

# Nginx settings
NGINX_HTTP_PORT="80"
NGINX_HTTPS_PORT="443"
SERVER_NAME="localhost"

# SSL settings (set to true and provide paths when ready)
SSL_ENABLED=false
SSL_CERT_DIR=./ssl

# FastAPI settings
DATABASE_URL=postgresql://user:pass@localhost:5432/db
SECRET_KEY=your-secret-key-here
DEBUG=true

# Production overrides (copy to .env.prod)
# ENVIRONMENT=production
# IMAGE_TAG=1.0.0
# UVICORN_EXTRA_FLAGS=--workers 4
# DEBUG=false
# SSL_ENABLED=true